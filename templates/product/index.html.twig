{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <div class="container">
        <br>
        <h1>Liste des produits</h1>
        <br><br>
        {% include 'layouts/_flash_message.html.twig' %}
        <a href="{{ path('app_product_new') }}" class="user-btn btn btn-primary mb-3">Ajouter un produit</a>

        {% if products is empty %}
            <div class="alert alert-info" role="alert">
                Aucun produit trouvé.
            </div>
        {% else %}
        <table class="table custom-table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Prix</th>
                    <th>Stock</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.description }}</td>
                    <td>{{ product.price }}€</td>
                    <td>
                        {% if product.stock > 0 %}
                            <span class="badge bg-success user-btn">{{ product.stock }}</span>
                        {% else %}
                            <span class="badge bg-danger user-btn">Rupture de stock</span>
                        {% endif %}
                    </td>
                    <td>
                        <img src="{{ asset('uploads/images' ~ product.image) }}" alt="{{ product.name }}" class="img-thumbnail" style="max-width: 100px;">
                    </td>
                    <td>
                        <a href="{{ path('app_product_show', {'id': product.id}) }}" class="user-btn btn btn-info">Afficher</a>
                        <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="user-btn btn btn-warning">Modifier</a>
                        <div style="display: inline-block;">
                            {{ include('product/_delete_form.html.twig') }}
                        </div>
                        <a href="{{ path('app_product_add_stock', {'id': product.id}) }}" class="user-btn btn btn-success">Ajouter du stock</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% endif %}
    </div>
{% endblock %}
