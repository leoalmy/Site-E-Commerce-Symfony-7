{% extends 'base.html.twig' %}

{% block title %}Détails de la sous-catégorie{% endblock %}

{% block body %}
    <div class="container">
        <br>
        <h1>Détails de la sous-catégorie</h1>
        <br><br>
        <table class="custom-table table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Catégorie parent</th>
                    <th>Nom</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ sub_category.id }}</td>
                    <td>{{ sub_category.category.name }}</td>
                    <td>{{ sub_category.name }}</td>
                </tr>
            </tbody>
        </table>

        <div class="display: inline-block">
            <a href="{{ path('app_sub_category_edit', {'id': sub_category.id}) }}" class="user-btn btn btn-primary">Modifier</a>
            <a href="{{ path('app_sub_category_index') }}" class="user-btn btn btn-secondary">Retour à la liste</a>
            <div class="d-inline-block">
                {{ include('sub_category/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
