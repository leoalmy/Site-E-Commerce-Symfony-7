{{ form_start(form) }}
    <label for="{{ form.name.vars.id }}" class="form-label">Nom de la sous-catégorie</label>
    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
    <label for="{{ form.category.vars.id }}" class="form-label">Catégorie</label>
    {{ form_widget(form.category, {'attr': {'class': 'form-select'}}) }}
    <br>
    {% set button_label = button_label|default('Enregistrer') %}
    {% if button_label == 'Mettre à jour' %}
        <div class="container">
        <button class="user-btn btn btn-primary" type="submit" onclick="return confirm('Êtes-vous sûr de vouloir modifier cette sous catégorie ?');">{{ button_label|default('Enregistrer') }}</button>
        </div>
    {% else %}
        <div class="container">
        <button class="user-btn btn btn-primary" type="submit" onclick="return confirm('Êtes-vous sûr de vouloir créer cette sous catégorie ?');">{{ button_label|default('Enregistrer') }}</button>
        </div>
    {% endif %}
    <br>
{{ form_end(form) }}
